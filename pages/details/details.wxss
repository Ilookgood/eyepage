  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.details_top_text_right text{
  display: block;
  font-size: 25rpx;
  line-height: 25rpx;
  margin-bottom: 14rpx;
}
.details_top_text_right text:last-child{
font-size: 20rpx;
  line-height: 20rpx;
  color: #808080;
}
.details_top_btn{
  position: absolute;
  bottom: -61rpx;
  right: 48rpx;
  width: 123rpx;
  height: 123rpx;
  border-radius: 100%;
  overflow: hidden;
  /* box-shadow:0px 0px 4px 4px #808080   */
}
.details_top_btn image{
  width: 100%;
  height: 100%;
}
