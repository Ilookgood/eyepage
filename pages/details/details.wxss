/* pages/details/details.wxss */
.details_top{
  width: 100%;
  height: 750rpx;
  position: relative;
}
.details_top .details_top_bg{
  width: 100%;
  height: 100%;
  background: pink;
}
.details_top_text{
  position: absolute;
  top: 37rpx;
  left: 50%;
  width: 670rpx;
  padding: 19rpx;
  border-radius: 25rpx;
  background:rgba(250, 250, 250, 0.9);
  overflow:hidden;
  margin: 0 auto;
  transform: translateX(-50%)

}
.details_top_text_left{
  width: 82rpx;
  height: 82rpx;
  border-block-end: 100%;
  overflow: hidden;
  background: red;
  vertical-align: middle;
  float: left;
  margin-left: 15rpx;
  border-radius: 100%;
}
.details_top_text_left image{
width: 100%;
  height: 100%;
}
