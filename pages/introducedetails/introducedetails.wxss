/* pages/introducedetails/introducedetails.wxss */
.details_top{
  width: 100%;
  height: 750rpx;
  position: relative;
}
.details_top .details_top_bg{
  width: 100%;
  height: 100%;
  background: pink;
}
.details_top_text{
  position: absolute;
  top: 37rpx;
  left: 50%;
  width: 670rpx;
  padding: 19rpx;
  border-radius: 25rpx;
  background:rgba(250, 250, 250, 0.9);
  overflow:hidden;
  margin: 0 auto;
  transform: translateX(-50%)

}
.details_top_text_left{
  width: 82rpx;
  height: 82rpx;
  border-block-end: 100%;
  overflow: hidden;
  background: red;
  vertical-align: middle;
  float: left;
  margin-left: 15rpx;
  border-radius: 100%;
}
.details_top_text_left image{
width: 100%;
  height: 100%;
}
.details_top_text_right{
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.details_top_text_right text{
  display: block;
  font-size: 25rpx;
  line-height: 25rpx;
  margin-bottom: 14rpx;
}
.details_top_text_right text:last-child{
font-size: 20rpx;
  line-height: 20rpx;
  color: #808080;
}
.details_top_btn{
  width: 650rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: linear-gradient(to top,  #5135DD,#0FF5FF );
  border-radius: 50rpx;
  position: absolute;
  bottom: -50rpx;
  left: 50%;
  transform: translateX(-50%)
}
.details_top_btn text{
  text-align: center;
  line-height: 100rpx;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}
.introducedetails_text{
  padding-top: 80rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  padding-bottom: 24rpx;
}
.introducedetails_text text{
  color: #808080;
  font-size: 25rpx;
  line-height: 30rpx;
}
.introduce_box{
  padding: 48rpx 50rpx;
  border-top: 1rpx solid #808080;
  border-bottom: 1rpx solid #808080;
}
.introduce_box_name{
  font-size: 50rpx;
  color: #000;
  line-height: 50rpx;
  margin-bottom: 30rpx;
}
.introduce_box_int{
  font-size: 35rpx;
  color: #808080;
  margin-bottom: 35rpx;
  line-height: 35rpx;
}
.introduce_box_text{
  font-size: 25rpx;
  line-height: 25rpx;
  margin-bottom: 14rpx;
  color: #808080;
}
.introduce_box_textto{
  color: #808080;
  font-size: 25rpx;
  line-height: 25rpx;
}
.zj_icon_bnt{
  width: 351rpx;
  height: 121rpx;
  position: relative;
  margin: 0 auto;
  line-height: 121rpx;
  text-align: center;
  margin-top: 89rpx;
  margin-bottom: 140rpx;
}
.zj_icon_bnt image{
  width: 100%;
  height: 100%;

}
.zj_icon_bnt text{
  position: absolute;
  left: 50%;
  top:50%;
  font-size: 30rpx;
  text-align: center;
  font-weight: bolder;
  color: #fff;
  width: 100%;
  transform: translate(-50%,-50%)
}